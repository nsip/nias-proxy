extends layout

block body
  body(class="login")
  block content
    div(class="container")
      section(id="content")
        form(action="#{action}" method="POST")
          h1 #{heading}
          div
            input(type="text", placeholder="#{user_prompt}", required="", name="username", id="username")
          div
            input(type="password", placeholder="#{pass_prompt}", required="", name="password", id="password")
          div
            input(type="submit", value="#{login_btn_text}")
            a(href="#{lost_password_url}") #{lost_password_text}
            a(href="#{register_url}") #{register_text}
          div(class=error ? 'error' : 'empty') #{error}
